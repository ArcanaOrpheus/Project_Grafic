<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<!-- SQL Dialect. Usamos el 5 para poder hacer cosas chulas -->
		<property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

		<!-- Database Connection Settings -->
		<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
<!-- Especificar aqui la DB -->		
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/nueva</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">randomwins</property>
<!-- Crea tablas automÃ¡ticamente -->		
		<property name="hibernate.hbm2ddl.auto">create</property>
		<property name="show_sql">true</property>

		<!-- Specifying Session Context -->
		<property name="hibernate.current_session_context_class">org.hibernate.context.internal.ThreadLocalSessionContext</property>

<!-- Aqui van las clases que mapees. TODAS -->
		<mapping class="ProjectUF2.project.Client" />
		<mapping class="ProjectUF2.project.Comanda" />
		<mapping class="ProjectUF2.project.ComandaEstat" />
		<mapping class="ProjectUF2.project.ComandaLinia" />
		<mapping class="ProjectUF2.project.LotDesglossat" />
		<mapping class="ProjectUF2.project.Magatzem" />
		<mapping class="ProjectUF2.project.PeticioProveidor" />
		<mapping class="ProjectUF2.project.Producte" />
		<mapping class="ProjectUF2.project.Proveidor" />
	</session-factory>
</hibernate-configuration>